<?xml version="1.0" ?>
<launch>
  <include file="$(find aircraft_simulation_description)/launch/aircraft_world.launch"/>
  <rosparam file="$(find aircraft_simulation_description)/launch/controller.yaml" command="load"/>
  
  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false" output="screen" ns="/aircraft" args="joint_state_controller 
  yaw_joint_position_controller 
  roll_joint_position_controller 
  pitch_joint_position_controller"/>

  <!-- joystick value convert node -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="false" output="screen">
    <remap from="/joint_states" to="/aircraft/joint_states"/>
  </node>
  
  <!-- joystick value convert node -->
  <node pkg="aircraft_simulation_description" type="aircraft_simulation_pub.py" name="aircraft_simulation_pub" output="screen"/>

</launch>
